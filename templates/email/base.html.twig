{% trans_default_domain 'mail' %}
{{ project_name }} - {% block title %}{% endblock %}


<table width="100%" border="0" cellpadding="0" cellspacing="0" style="background-color:#f2f6f7">
    <tr valign="middle">
        <td align="center">
            <table border="0" cellpadding="0" cellspacing="0" width="100%"
                   style="background-color:#ffffff;max-width:600px">
                <tbody>
                <tr height="140" align="center" style="vertical-align:middle">
                    <td colspan="5" align="center" style="vertical-align:middle;text-align:center">
                        <img src="{{ app.request.getSchemeAndHttpHost() ~ '/' ~asset('assets/images/email/logo.png') }}"
                             width="320" height="265" alt="" style="display:block;margin:0 auto"
                             data-image-whitelisted="" class="CToWUd">
                    </td>
                </tr>
                <tr>
                    <td width="10%">&nbsp;</td>
                    <td colspan="3" width="80%"
                        style="font-size:14px;font-family:Arial;color:#000000;text-transform:none;vertical-align:text-top;line-height:3.5;text-align:center">
                        {% trans with {'%username%' : username } %}hello{% endtrans %}
                    </td>
                    <td width="10%">&nbsp;</td>
                </tr>
                {% block content %}
                {% endblock %}
                <tr>
                    <td width="10%">&nbsp;</td>
                    <td colspan="3" width="80%"
                        style="font-size:13px;font-family:Arial;color:#000000;text-transform:none;vertical-align:text-top;line-height:1.5;text-align:center">
                        {% trans with {'%project_name%': project_name} %}regards{% endtrans %}
                    </td>
                    <td width="10%">&nbsp;</td>
                </tr>
                <tr style="vertical-align:middle">
                    <td width="10%">&nbsp;</td>
                    <td colspan="3" style="font-size:11px;font-family:Arial;color:#979797;text-align:center">
                        {% trans %}generated_info{% endtrans %}
                    </td>
                    <td width="10%">&nbsp;</td>
                </tr>
                <tr height="20">
                    <td height="20" colspan="5">&nbsp;</td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>

