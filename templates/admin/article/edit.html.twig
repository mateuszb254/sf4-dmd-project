{% extends 'admin/base.html.twig' %}
{% form_theme form 'admin/form_theme.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{% trans %}article{% endtrans %} - {{ article.title }}</h3>
                </div>
                <div class="box-body">
                    <div class="box-body pad">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">{% trans %}update{% endtrans %}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
