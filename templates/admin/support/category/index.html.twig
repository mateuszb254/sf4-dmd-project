{% extends 'admin/base.html.twig' %}
{% from 'macro.html.twig' import paginate_bootstrap %}
{% block content %}
    <div class="col-xs-6">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{% trans %}articles{% endtrans %}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <th>{% trans %}name{% endtrans %}</th>
                        <th>-</th>
                    </tr>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>
                            <td>
                                <a href="{{ path('admin_article_edit', {"id" : category.id }) }}">
                                    <i class="fa fa-cogs"></i>
                                </a>
                            </td>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td>{% trans %}Nie znaleziono Å¼adnej kategorii.{% endtrans %}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {#{{ paginate_bootstrap(pagination, 'admin_article_index') }}#}
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
{% endblock %}
