<div class="modal fade" id="confirmationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h4>{% trans with {'%itemName%' : itemName ?? ''} %}delete_confirmation_header{% endtrans %}</h4>
                <p>{% trans with {'%itemName%' : itemName ?? ''} %}delete_confirmation_content{% endtrans %}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btnNo" data-dismiss="modal">
                    <i class="fa fa-ban" aria-hidden="true"></i>{% trans %}cancel{% endtrans %}
                </button>
                <button type="button" class="btn btn-danger" id="btnYes" data-dismiss="modal">
                    <i class="fa fa-trash" aria-hidden="true"></i> {% trans %}delete{% endtrans %}
                </button>
            </div>
        </div>
    </div>
</div>
